@using MovieStar.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="~/Source/images/favicon.png" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
          crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kalam:700" rel="stylesheet">
    <link rel="stylesheet" href="~/Source/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Source/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Source/css/animate.css">
    <link rel="stylesheet" href="~/Source/css/style.css">
    <title>@ViewBag.Title</title>
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <img src="~/Source/images/preloader.svg" alt="">
    </div>
    <!-- End of preloader -->
    <!-- Header -->
    <section id="heading">
        <div class="container">
            <div class="row">
                <div class="col-md-12 d-flex justify-content-end">
                    <div class="contact">
                        @if (Session["user"] != null)
                        {
                            <span>
                                <i class="fas fa-user-circle"></i>
                                @{ 
                                    User currentusr = Session["user"] as User;
                                }
                                <a href="/Account/Personal">@currentusr.Username</a>
                            </span>
                        }
                        else
                        {
                            <span>
                                <i class="fas fa-sign-in-alt"></i>
                                <a href="/Account/Login">Login</a>
                            </span>
                            <span>
                                <i class="fas fa-user-alt"></i>
                                <a href="/Account/Register">Sign up</a>
                            </span>
                        }
                        <span>
                            <i class="fas fa-phone"></i>
                            <a href="tel:+9940558224815">055-822-48-15</a>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-10">
                    <a href="/Home/Index">
                        <img class="icon" src="~/Source/images/logo.svg" alt="">
                    </a>
                </div>
                <div class="col-md-9 col-2 d-flex justify-content-end">
                    <div class="hidden_nav_icon">
                        <i class="fas fa-bars"></i>
                    </div>
                    <nav>
                        <ul class="main_nav">
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="/Home/Index">HOME</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Film" ? "active" : "")" href="/Film/Index">FILMS</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Actor" ? "active" : "")" href="/Actor/Index">ACTORS</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "News" ? "active" : "")" href="/News/Index">NEWS</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-12 pt-3">
                    <div class="hidden_main_nav">
                        <ul>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="/Home/Index">HOME</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Film" ? "active" : "")" href="/Film/Index">FILMS</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Actor" ? "active" : "")" href="/Actor/Index">ACTORS</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "News" ? "active" : "")" href="/News/Index">NEWS</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Header -->

    <!-- Scroll Navbar -->
    <section id="scroll_nav">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-10">
                    <a href="/Home/Index">
                        <img class="icon" src="~/Source/images/logo.svg" alt="">
                    </a>
                </div>
                <div class="col-md-9 col-2 d-flex justify-content-end">
                    <div class="hidden_nav_icon">
                        <i class="fas fa-bars"></i>
                    </div>
                    <nav>
                        <ul class="main_nav">
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="/Home/Index">HOME</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Film" ? "active" : "")" href="/Film/Index">FILMS</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Actor" ? "active" : "")" href="/Actor/Index">ACTORS</a>
                            </li>
                            <li>
                                <a class="main_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "News" ? "active" : "")" href="/News/Index">NEWS</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-12 pt-3">
                    <div class="hidden_main_nav">
                        <ul>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="/Home/Index">HOME</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Film" ? "active" : "")" href="/Film/Index">FILMS</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "Actor" ? "active" : "")" href="/Actor/Index">ACTORS</a>
                            </li>
                            <li>
                                <a class="hidden_nav_item @(ViewContext.RouteData.Values["Controller"].ToString() == "News" ? "active" : "")" href="/News/Index">NEWS</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Scroll Navbar -->

    @RenderBody()

    <!-- Contact -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 d-flex justify-content-center pb-5 pt-5">
                    <div class="inner">
                        <p>Need help? Contact our support team on</p>
                        <h4>055-822-48-15</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Contact -->
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row pt-5">
                <div class="col-md-3 d-flex justify-content-center">
                    <div class="inner">
                        <h6>GET IN TOUCH</h6>
                        <ul>
                            <li>
                                <a href="">FAQs</a>
                            </li>
                            <li>
                                <a href="">Give us feedback</a>
                            </li>
                            <li>
                                <a href="">Contact us</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 d-flex justify-content-center">
                    <div class="inner">
                        <h6>ABOUT MOVIE STAR</h6>
                        <ul>
                            <li>
                                <a href="">About us</a>
                            </li>
                            <li>
                                <a href="">Find us</a>
                            </li>
                            <li>
                                <a href="">Schedule</a>
                            </li>
                            <li>
                                <a href="">News</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 d-flex justify-content-center">
                    <div class="inner">
                        <h6>LEGAL STUFF</h6>
                        <ul>
                            <li>
                                <a href="">Terms & Conditions</a>
                            </li>
                            <li>
                                <a href="">Privacy policy</a>
                            </li>
                            <li>
                                <a href="">Cookie policy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 d-flex justify-content-center">
                    <div class="inner">
                        <h6>CONNECT WITH US</h6>
                        <ul>
                            <li>
                                <a href="">
                                    <i class="fab fa-facebook-f"></i>Facebook
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fab fa-twitter"></i>Twitter
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fab fa-google-plus-g"></i>Google+
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-12 d-flex justify-content-center">
                    <div class="sponsors">
                        <span>@DateTime.Now.Year © Movie Star /</span>
                        <span>
                            <a href="https://www.klevermedia.co.uk/">Web design by Klever media</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Source/js/owl.carousel.min.js"></script>
    <script src="~/Source/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>